<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Examen Parcial"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESPINOZA PONCIANO DENIS YEYSON"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFormulario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="formulario" />


        <Button
            android:id="@+id/btnIntentExplicito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="explicito" />

    <Button
        android:id="@+id/btnIntentImplicito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicito" />

</LinearLayout>